generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())

  userId    String
  user      User      @relation(fields: [userId], references: [id])

  reviews   Review[]
  analyses  Analysis[]
}

model Review {
  id        String   @id @default(cuid())
 text      String
  source    String?
  createdAt DateTime @default(now())

  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
}

model Analysis {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  themes     String
  complaints String
  praises    String
  fixFirst   String

  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
}
